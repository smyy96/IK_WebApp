@using BESMIK.ViewModel.Permission
@model PermissionViewModel
@{
    Layout = "_CompanyManagerLayout";
}

<div class="pagetitle">
    <h1>İzin Detayları</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="CompanyManager" asp-controller="CompanyManagerHome" asp-action="Index">Anasayfa</a></li>
            <li class="breadcrumb-item">İzin İşlemleri</li>
            <li class="breadcrumb-item active">İzin Detayları</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <!-- Kullanıcı Bilgileri Kartı -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5>Kullanıcı Bilgileri</h5>
                </div>
                <div class="card-body">
                    <p><strong>Ad:</strong> @Model.AppUser.Name</p>
                    <p><strong>İkinci Ad:</strong> @(Model.AppUser.SecondName ?? "-")</p>
                    <p><strong>Soyad:</strong> @Model.AppUser.Surname</p>
                    <p><strong>İkinci Soyad:</strong> @(Model.AppUser.SecondSurname ?? "-")</p>
                    <p><strong>TC:</strong> @Model.AppUser.Tc</p>
                    <p><strong>İşe Giriş Tarihi:</strong> @Model.AppUser.WorkStartDate.ToString("dd MMMM yyyy")</p>
                    <p>
                        <strong>Durumu:</strong>
                        @if (Model.AppUser.IsActive)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Pasif</span>
                        }
                    </p>
                    <p><strong>Meslek:</strong> @Model.AppUser.Job</p>
                    <p><strong>Departman:</strong> @Model.AppUser.Department.ToString()</p>
                    <p><strong>Email:</strong> @Model.AppUser.Email</p>
                    <p><strong>Telefon:</strong> @Model.AppUser.Phone</p>
                </div>
            </div>
        </div>

        <!-- İzin Bilgileri Kartı -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5>İzin Bilgileri</h5>
                </div>
                <div class="card-body">
                    <p><strong>İzin Türü:</strong> @Model.PermissionType</p>
                    <p><strong>Başlangıç Tarihi:</strong> @Model.PermissionStartDate.ToString("dd MMMM yyyy")</p>
                    <p><strong>Bitiş Tarihi:</strong> @Model.PermissionEndDate.ToString("dd MMMM yyyy")</p>
                    <p><strong>İzin Gün Sayısı:</strong> @Model.OffDaysNumbers</p>
                    <p><strong>Talep Tarihi:</strong> @Model.PermissionRequestDate.ToString("dd MMMM yyyy")</p>

                    <a asp-action="PermissionApprove" asp-controller="PermissionManager" asp-route-id="@Model.Id" class="btn btn-warning w-100">Talep Onayı</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <a href="@Url.Action("PermissionListByCompanyId")" class="btn btn-secondary mt-3">Listeye Dön</a>
        </div>
    </div>
</section>

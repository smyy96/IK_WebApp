@model List<AppUserViewModel>

@{
    Layout = "_CompanyManagerLayout";
}


<div class="pagetitle">
    <h1>Şirket Yöneticisi Ekle</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="CompanyManager" asp-action="Index">Anasayfa</a></li>
            <li class="breadcrumb-item">Personel İşlemleri</li>
            <li class="breadcrumb-item active">Personel Listele</li>
        </ol>
    </nav>
</div>


<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Şirket Yönetici Listesi</h5>

                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Personel Adı</th>
                                <th>Personel Soyadı</th>
                                <th>Telefon</th>
                                <th>Şahsi E-Mail</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (AppUserViewModel item in Model)
                            {
                                <tr>
                                    <td>
                                        <img id="personel"
                                             src="@(item.Photo != null ? Url.Content($"~/images/personal/{item.Photo}") : Url.Content("~/img/imageupload1.jpg"))"
                                             alt="Personel Resmi"
                                             style="width: 40px; height: 40px; object-fit: cover; border-radius: 50%;">
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.Surname</td>
                                    <td>@item.Phone</td>
                                    <td>@item.PersonalEmail</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</section>

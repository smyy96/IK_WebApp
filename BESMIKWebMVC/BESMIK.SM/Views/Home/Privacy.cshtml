@model List<CompanyViewModel>

@{
    Layout = "_AdminLayout";
}



<section class="section">
    <div class="row">
        <div class="col-lg-6">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Table with stripped rows</h5>

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Name</th>
                                <th scope="col">Title Name</th>
                                <th scope="col">EMail</th>
                                <th scope="col">Address</th>
                                <th scope="col">Mersis Number</th>
                                <th scope="col">Tax Number</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (CompanyViewModel item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td>@item.Name</td>
                                    <td>@item.TitleName</td>
                                    <td>@item.Email</td>
                                    <td>@item.Address</td>
                                    <td>@item.MersisNumber</td>
                                    <td>@item.TaxNumber</td>
                                    <td>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-success">Sil</a>
                                    </td>
                                    <td>
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Güncelle</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
